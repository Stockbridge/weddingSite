/* - - - RESET - - - */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video {
  border: 0;
  margin: 0;
  padding: 0;
}
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none
}
blockquote:before, blockquote:after, q:before, q:after {
  content: none
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

/* - - - VARIABLES - - - */
lightColor = #f5e6d2;
darkColor = #070726;

light = 300;
normal = 500;
bold = 600;

html {
  font-size: 10px;
  border-top: 3rem solid darkColor;
  background: azure;
  color: darkColor;
  font-family: 'Raleway', Helvetica, Arial, sans-serif;
  min-width: 330px;
}

.constrainer {
  width: 100%;
  max-width: 100rem;
  margin: 2rem auto;
  text-align: center;
}
.frame {
  background: url('../img/frame.png') no-repeat center;
  background-size: cover;
  width: 100%;
  display: inline-block;
  text-align: center;
  padding: 13rem 6rem;
  position: relative;
  box-sizing: border-box;
  min-height: 60rem;
}
.stamp {
  position: absolute;
  width: 15rem;
  height: 15rem;
  margin-left: -7.5rem;
  top: -10%;
  left: 50%;
}

.names, .date-container {
  font-family: 'Rokkitt', 'Palatino Linotype', Palatino, serif;
}

.names {
  font-size: 3.3rem;
}
.purpose {
  font-size: 2.3rem;
  font-weight: 300;
  margin-bottom: 1rem;
}

.date-container {
  border-top: .5rem solid darkColor;
  padding-top: 1rem;
}

.day-month-container, .year {
  display: inline-block;
  vertical-align: top;
}
.day-month-container {
  width: 65%;
  text-align: left;
}
.day {
  font-size: 4rem;
}
.number {
  font-size: 6rem;
  line-height: 6rem;
}
.of {
  font-size: 3rem;
  padding-left: 1rem;
}
.month {
  font-size: 3.2rem;
  line-height: 3rem;
}
.year {
  width: 30%;
  border-left: 2px solid darkColor;
  font-size: 6rem;
  line-height: 4.5rem;
  padding-left: 2%;
}
.separator {
  font-size: 2rem;
  margin-top: 1rem;
  .bar {
    display: inline-block;
    width: 40%;
    border-top: 1px solid darkColor;
    vertical-align: middle;
  }
}
.location {
  font-size: 1.8rem;
  font-weight: 300;
  padding-top: 1rem;
}
.more-info {
  font-size: 1.5rem;
  font-weight: 300;
  padding-top: 2rem;
}

@media all and (min-width: 800px) {
   html {
    background: url('../img/bgImage.jpg') no-repeat center;
    background-size: cover;
    padding-bottom: 5rem;
  }

  .constrainer {
    text-align: right;
  }
}

@media all and (min-width: 500px) {
  .constrainer {
    margin-top: 5rem;
  }

  .frame {
    width: 55rem;
    height: 70rem;
    padding: 10rem 8rem 17rem;
  }

  .names {
    font-size: 6rem;
  }
  .purpose {
    font-size: 4.35rem;
  }
  .day {
    font-size: 6rem;
  }
  .number {
    font-size: 10rem;
    line-height: 8rem;
    padding-right: .5rem;
  }
  .of {
    font-size: 4rem;
    padding-left: 2rem;
  }
  .month {
    font-size: 5.7rem;
    line-height: 5rem;
  }
  .year {
    font-size: 9rem;
    line-height: 6.5rem;
  }
  .separator {
    font-size: 4rem;
  }
  .location {
    font-size: 3rem;
  }
  .more-info {
    font-size: 2rem;
  }
}
